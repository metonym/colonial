{
  "name": "colonial",
  "version": "0.0.1-alpha.1",
  "license": "MIT",
  "description": "Old fashioned CSS-in-JS",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "develop": "tsc -w",
    "build": "tsc",
    "lint": "tslint --fix -p . -c tslint.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^25.1.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "ts-jest": "^25.2.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/colonial.git"
  },
  "homepage": "https://github.com/metonym/colonial",
  "keywords": [
    "css-in-js",
    "template literal"
  ],
  "files": [
    "lib"
  ],
  "bugs": "https://github.com/metonym/colonial/issues"
}
